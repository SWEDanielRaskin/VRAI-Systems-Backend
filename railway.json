{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python main.py",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "volumes": [
    {
      "name": "data",
      "path": "/data"
    },
    {
      "name": "uploads",
      "path": "/app/uploads"
    },
    {
      "name": "credentials",
      "path": "/app/credentials"
    }
  ]
} 